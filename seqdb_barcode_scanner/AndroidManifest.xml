<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.gc.aafc.seqdb_barcode_scanner"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.CAMERA" />
	<uses-feature android:name="android.hardware.camera" />
	<uses-feature android:name="android.hardware.camera.autofocus" />
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
          
        
        <activity
            android:name="ca.gc.aafc.seqdb_barcode_scanner.ScannerActivity"
            android:label="@string/app_name" 
            android:screenOrientation="landscape" >

        </activity>
        
        <activity
            android:name="ca.gc.aafc.seqdb_barcode_scanner.TopActivity"
            android:label="@string/app_name" 
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="ca.gc.aafc.seqdb_barcode_scanner.LoginActivity"
            android:label="Login" 
            android:screenOrientation="landscape" >
            
        </activity>
        
         <activity
            android:name="ca.gc.aafc.seqdb_barcode_scanner.MainMenuActivity"
            android:label="Main Menu"
            android:screenOrientation="landscape"  >
        </activity>
        
         <activity
            android:name="ca.gc.aafc.seqdb_barcode_scanner.ScanPlaceholderActivity"
            android:label="Barcode Scanner"
            android:screenOrientation="landscape" 
            >
         </activity>
        
         <activity
            android:name="ca.gc.aafc.seqdb_barcode_scanner.LookupActivity"
            android:label="Lookup" 
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="ca.gc.aafc.seqdb_barcode_scanner.GetContentsActivity"
            android:label="GetContents" 
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="ca.gc.aafc.seqdb_barcode_scanner.MoveActivity"
            android:label="Move" 
            android:screenOrientation="landscape" >
        </activity>
          
    </application>

</manifest>
