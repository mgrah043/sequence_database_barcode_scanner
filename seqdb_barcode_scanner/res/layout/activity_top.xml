<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:text="Sequence Database Barcode Scanner"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="50sp" />

    <Button
        android:id="@+id/b_scanLogin"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="97dp"
        android:background="@android:color/holo_blue_light"
        android:minHeight="55dp"
        android:text="@string/scan_login"
        android:textColor="@android:color/white"
        android:textColorLink="@android:color/holo_blue_dark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/b_manualLogin"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/b_scanLogin"
        android:layout_below="@+id/tv_or"
        android:layout_marginTop="38dp"
        android:background="@android:color/holo_blue_light"
        android:minHeight="55dp"
        android:text="@string/manual__login"
        android:textColor="@android:color/white"
        android:textColorLink="@android:color/holo_blue_dark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b_scanLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="OR"
        android:textSize="40sp"
        android:textStyle="bold" />

</RelativeLayout>