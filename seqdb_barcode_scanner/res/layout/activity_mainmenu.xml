<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
 	<Button
        android:id="@+id/b_lookup"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop = "80dp"
        android:background="#0000FF"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="24sp"
        android:text="Lookup" />
 	
 	<Button
        android:id="@+id/b_getContents"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/b_lookup"
        android:layout_marginTop = "16dp"
        android:background="#0000FF"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="24sp"        
        android:text="Get Contents" />
 	
 	<Button
        android:id="@+id/b_move"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/b_getContents"
        android:layout_marginTop = "16dp"
        android:background="#0000FF"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="24sp"        
        android:text="Move" />
 	
 		<Button
        android:id="@+id/b_bulkMove"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/b_move"
        android:layout_marginTop = "16dp"
        android:background="#0000FF"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="24sp"        
        android:text="Bulk Move" />
 	
 	
 	

</RelativeLayout>
